generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Puzzle {
  id          String       @id
  idea        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  jobId       String?
  source      String       @default("generated")
  tags        String[]     @default([])
  generations Generation[]
  job         Job?         @relation(fields: [jobId], references: [id])
  ratings     Rating[]

  @@index([jobId])
  @@index([source])
}

model Generation {
  id          String       @id @default(cuid())
  puzzleId    String
  parentGenId String?
  tokensUsed  Int          @default(0)
  timeTakenMs Int          @default(0)
  reasoning   String?
  createdAt   DateTime     @default(now())
  feedback    Feedback?
  parentGen   Generation?  @relation("History", fields: [parentGenId], references: [id])
  children    Generation[] @relation("History")
  puzzle      Puzzle       @relation(fields: [puzzleId], references: [id])
  modelRuns   ModelRun[]
  pairs       Pair[]
}

model Pair {
  id           String            @id @default(cuid())
  generationId String
  input        Json
  output       Json
  order        Int
  isTestCase   Boolean           @default(false)
  predictions  ModelPrediction[]
  generation   Generation        @relation(fields: [generationId], references: [id])
}

model Feedback {
  id           String     @id @default(cuid())
  generationId String     @unique
  text         String?
  gridEdits    Json?
  createdAt    DateTime   @default(now())
  generation   Generation @relation(fields: [generationId], references: [id])
}

model ModelRun {
  id           String            @id @default(cuid())
  generationId String
  modelName    String
  provider     String
  status       String            @default("pending")
  reasoning    String?
  correctCount Int               @default(0)
  totalCount   Int               @default(0)
  accuracy     Float?
  tokensUsed   Int?
  timeTakenMs  Int?
  errorMessage String?
  metadata     Json?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  predictions  ModelPrediction[]
  generation   Generation        @relation(fields: [generationId], references: [id])

  @@index([generationId])
  @@index([modelName])
  @@index([createdAt])
}

model ModelPrediction {
  id        String   @id @default(cuid())
  runId     String
  pairId    String
  predicted Json
  expected  Json
  isCorrect Boolean
  reasoning String?
  createdAt DateTime @default(now())
  pair      Pair     @relation(fields: [pairId], references: [id])
  run       ModelRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@index([pairId])
}

model Job {
  id           String   @id @default(cuid())
  concept      String   @db.Text
  status       String   @default("pending") // pending, running, completed, failed, cancelled
  puzzleId     String?
  errorMessage String?  @db.Text
  model        String?
  
  // Progress/Thought Tracking
  thought      String?  @db.Text // Live thought process
  content      String?  @db.Text // Live generated content
  
  tokensUsed   Int?
  timeTakenMs  Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  puzzles      Puzzle[]

  @@index([status])
  @@index([createdAt])
}

model Rating {
  id              String   @id @default(cuid())
  puzzleId        String
  userId          String?
  quality         Int
  difficulty      Int
  interestingness Int
  createdAt       DateTime @default(now())
  puzzle          Puzzle   @relation(fields: [puzzleId], references: [id], onDelete: Cascade)

  @@index([puzzleId])
  @@index([userId])
}
